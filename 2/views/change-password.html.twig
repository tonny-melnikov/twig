{% extends 'base.html.twig' %}

{% block content %}
<h1 class="header center">Change password page</h1>
 <form class="col s12" method="post" action="/user/change-password">
    <div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='password' name='password' id='password' />
        <label for='password'>Enter your NEW password</label>
      </div>
    </div>

    <div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='password' name='passwordConf' id='passwordConf' />
        <label for='passwordConf'>Confirm your password</label>
      </div>
    </div>

    <input type="hidden", name="_csrf", value="{{ csrf }}" />

    <br />
    <center>
      <div class='row'>
        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Изменить</button>
      </div>
    </center>
</form>
{% endblock %}
