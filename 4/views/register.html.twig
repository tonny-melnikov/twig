{% extends 'base.html.twig' %}

{% block content %}
<h1 class="header center">Register page</h1>
 <form class="col s12" method="post" action="/users/create">
    <div class='row'>
      <div class='col s12'>
      </div>
    </div>
    
   	<div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='text' name='username' id='username' />
        <label for='username'>Your username</label>
      </div>
    </div>
    
    <div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='email' name='email' id='email' />
        <label for='email'>Enter your email</label>
      </div>
    </div>
    
    <div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='password' name='password' id='password' />
        <label for='password'>Enter your password</label>
      </div>
    </div>
    
    <div class='row'>
      <div class='input-field col s12'>
        <input class='validate' type='password' name='passwordConf' id='passwordConf' />
        <label for='passwordConf'>Confirm your password</label>
      </div>
    </div>
    
    <br />
    <center>
      <div class='row'>
        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Login</button>
      </div>
    </center>
</form>
{% endblock %}